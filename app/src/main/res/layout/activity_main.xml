<?xml version="1.0" encoding="utf-8"?>
<!-- 芝麻开花节节高 -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/windowBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 标题区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/card_background"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/unactivated"
                android:textSize="16sp"
                android:textColor="@color/not_active_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/app_description"
                android:textSize="14sp"
                android:textColor="@color/textColorSecondary" />
        </LinearLayout>

        <!-- 功能按钮区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/card_background"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="功能模块"
                style="@style/TitleTextStyle" />

            <Button
                android:id="@+id/btn_forest_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/forest_configuration"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/btn_farm_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/farm_configuration"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- 日志查看区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/card_background"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日志查看"
                style="@style/TitleTextStyle" />

            <Button
                android:id="@+id/btn_forest_log"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/forest_log"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/btn_farm_log"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/farm_log"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/btn_all_log"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/all_log"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- 其他选项 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/card_background">

            <Button
                android:id="@+id/btn_github"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/visit_github"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/app_disclaimer"
                android:textSize="12sp"
                android:textColor="@color/textColorSecondary" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
